{% extends "Modules/layout.twig" %}
{% block stylesheet %}
<style>
.pricing {
    font-size: 2.5em
    margin-bottom: 0.75em
}

</style>

{% endblock %}


{% block content %}

<div class="container">
    <h3>Plans</h3>

    <div class="row">
    {% for plan in plans %}
      {% if plan["features"] %}
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-header" style="background-color: {{plan["color"]}}" class="p{{plan["name"]}}">{{ plan["name"] }}</div>
                <div class="card-body">
                    <h1 class="pricing">{{ plan["price"] }} <small class="text-muted"> / mo</small></h1>
                    <ul>
                    {% for feature in plan["features"] %}
                    <li><small>{{feature}}</small></li>
                    {% endfor %}
                    {% if plan.limits is defined %}
                    {% for limit,value in plan.limits %}
                    <li><small>{{limit}} limits: {{value}}</small></li>
                    {% endfor %}
                    {% endif %}
                    </ul>
                </div>
            </div>
        </div>
      {% endif %}
    {% endfor %}
    </div>
</div>
{% endblock %}